<h1 align="center">Mens</h1>
<div align="center">
    <%= will_paginate %>
    <% @users.each do |user| %>
        <ul class=listing>
            <div class="well col-md-8 col-md-offset-2">
                <li><%= link_to gravatar_for(user), user_path(user) %></li>
                <li class="article-title"><%= link_to user.username, users_path %></li>
                <li>
                  <small>
                    <%= pluralize(user.articles.count, "article") if user.articles  %>
                  </small>
                  <% if logged_in? and current_user.admin? %>
                      <li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %></li>
                  <% end %>
                </li>
            </div>
        </ul>
    <% end %>
    <div class="center">
        <%= will_paginate @user_articles %>
    </div>
</div>